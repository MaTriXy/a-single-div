#bones
  background-color: darken(darkcyan,20)

  div
    width: 14em
    height: @width
    margin-left: -(@width/2)
    margin-top: -(@width/2)
    background: radial-gradient(circle, darkcyan 50%,
                                        transparent 50.5%) 41% 40% / 16% 16%,
                radial-gradient(circle, darkcyan 50%,
                                        transparent 50.5%) 59% 40% / 16% 16%,
                linear-gradient(-60deg, darkcyan 35%,
                                        transparent 35.2%) 46.3% 48% / 6% 7%,
                linear-gradient( 60deg, darkcyan 35%,
                                        transparent 35.2%) 53.7% 48% / 6% 7%,
                linear-gradient( 70deg, transparent 20%,
                                        cyan 20.2%) 33% 44% / 26% 15%,
                linear-gradient(-70deg, transparent 20%,
                                        cyan 20.5%) 67% 44% / 26% 15%,
                linear-gradient(-54deg, darkcyan 40%,
                                        transparent 40.5%) 25.5% 32% / 8% 8%,
                linear-gradient( 54deg, darkcyan 40%,
                                        transparent 40.5%) 74.5% 32% / 8% 8%,
                radial-gradient(ellipse, cyan 32%,
                                         transparent 32.2%) 50% -33% / 100% 80%,
                repeating-linear-gradient(to right, darkcyan,
                                                    darkcyan 10%,
                                                    transparent 10%,
                                                    transparent 21%) 51% 61% / 19% 8%,
                linear-gradient(cyan, cyan) 50% 54% / 23% 10%,
                linear-gradient(cyan, cyan) 50% 65% / 30% 5%,
