                  radial-gradient(circle at 50% 0, black(0) 4%,
                                                   black 4.2%,
                                                   black 14.2%,
                                                   black(0) 14.3%) 1.5em 100% / 18em 50%,
                  radial-gradient(circle at 50% 0, black(0) 4%,
                                                   black 4.2%,
                                                   black 14.2%,
                                                   black(0) 14.25%) 3.2em 100% / 18em 50%,
                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 7.3%,
                                            black(0) 7.3%) 8.8em 0 / 18em 50%,
                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 7.3%,
                                            black(0) 7.3%) 10.5em 0 / 18em 50%,
                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 7.2%,
                                            black(0) 7.3%) 12.2em 0 / 18em 50%,
                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 7.2%,
                                            black(0) 7.3%) 13.6em 0 / 18em 77%,
                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 16%,
                                            black(0) 16%) 13.6em 2.22em / 18em 22%
      background-repeat: repeat-x
      animation-delay: .5s

@keyframes crawl
  0%
    transform: translateX(0)
  100%
    transform: translateX(18em)
