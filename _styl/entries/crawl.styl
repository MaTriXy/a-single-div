                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 7.3%,
                                            black(0) 7.3%) -.19em 0 / 18em 50%,
                  radial-gradient(circle at 0 100%, black(0) 2%,
                                                    black 2.2%,
                                                    black 7.1%,
                                                    black(0) 7.2%) 4.5em -1.3em / 18em 50%,
                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 7.3%,
                                            black(0) 7.3%) 3.4em -.46em / 18em 20.6%,
                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 7.3%,
                                            black(0) 7.3%) 2.8em 0 / 18em 77%,
                  linear-gradient(to right, black(0) 2.15%,
                                            black 2.15%,
                                            black 7.2%,
                                            black(0) 7.25%) 4.5em .7em / 18em 59.5%,
