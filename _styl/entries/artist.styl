                  radial-gradient(circle, darken(sienna,15) 40%,
                                          transparent 40.5%) 26% 56% / 1em 1em,
                  radial-gradient(circle, darken(sienna,15) 40%,
                                          transparent 40.5%) 74% 56% / 1em 1em,
                  linear-gradient($frida-hair, $frida-hair) 22% 45% / 2.4em .6em,
                  linear-gradient($frida-hair, $frida-hair) 78% 45% / 2.4em .6em,
                  repeating-linear-gradient(to right, $frida-hair,
                                                      $frida-hair .2em,
                                                      transparent .2em,
                                                      transparent .4em) 50% 45% / 1em .6em,
                  radial-gradient(ellipse at 100% 100%, transparent 47%,
                                                        $frida-hair 47.5%) -2.4em 0 / 7em 7em,
                  radial-gradient(ellipse at 0 100%, transparent 47%,
                                                     $frida-hair 47.5%) right -2.4em top 0 / 7em 7em
      background-repeat: no-repeat
      background-color: sandybrown
      border-radius: 50% 50% 50% 50% / 40% 40% 60% 60%
      border: 4px solid sienna
      border-top: none
      box-shadow: inset 0 -.2em 0 .5em black(.1)

    &::after
      width: 100%
      height: 9em
      left: 0
      top: -4.25em
      background: radial-gradient(circle, lightpink 40%, alpha(hotpink,0) 41%) 34% 38% / 2em 2em,
