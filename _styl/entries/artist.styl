                  linear-gradient($frida-hair, $frida-hair) 18% 100% / .4em 2em,
                  radial-gradient(circle, $frida-hair 50%, transparent 51%) 71% 10% / 4em 4em,
                  radial-gradient(circle, $frida-hair 50%, transparent 51%) 84% 35% / 3.5em 3.5em,
                  radial-gradient(circle, $frida-hair 50%, transparent 51%) 87% 70% / 3em 3em,
                  radial-gradient(circle, $frida-hair 50%, transparent 51%) 85.5% 85% / 1.6em 1.6em,
                  linear-gradient($frida-hair, $frida-hair) 82% 100% / .4em 2em
      background-repeat: no-repeat
